<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mage2docs" type="text" translate="label" showInWebsite="1" showInStore="1" showInDefault="1" sortOrder="20">
            <label>Product Documents</label>
            <tab>mage2</tab>
            <resource>Mage2_ProductDocs::documents_config</resource>
            <group id="documents" translate="label" type="text" sortOrder="10" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" showInWebsite="1" showInStore="1" showInDefault="1" sortOrder="10" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
